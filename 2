#include <iostream>
using namespace std;
int main()
{
    setlocale(LC_ALL, "rus");
    const int lines = 5;
    const int columns = 5;
    int number_of_zero = 0;
    int arr[lines][columns];
    int max = 0;

    for (int i = 0; i < lines; i++)
    {
        for (int j = 0; j < columns; j++)
        {
            arr[i][j] = rand() % 7;
        }
    }

    for (int i = 0; i < lines; i++)
    {
        for (int j = 0; j < columns; j++)
        {
            cout << arr[i][j] << "  ";
            if (j == 4)
            {
                cout << endl;
            }

        }
    }
    cout << "======================" << endl;
    for (int i = 0; i < lines; i++)
    {
        for (int j = 0; j < columns; j++)
        {
            if (i >= j)
            {
                cout << arr[i][j];
                cout << "  ";
                for (int x = 0; x < lines; x++)
                {
                    for (int x = 0; x < columns; x++)
                    {
                        if (arr[0][0] < arr[i][j])
                        {
                            max = arr[i][j];
                        }
                        else 
                        {
                            max = arr[0][0];
                        }
                    }
                }
            }
            if (j == 4)
            {
                cout << endl;
            }
            
        }
    }
    cout << "Максимальное число: " << max;
    
    
}

