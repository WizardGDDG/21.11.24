#include <iostream>
using namespace std;
int main()
{
    setlocale(LC_ALL, "rus");
    const int lines = 3;
    const int columns = 4;
    int number_of_zero = 0;
    int arr[lines][columns];

    for (int i = 0; i < lines; i++)
    {
        for (int j = 0; j < columns; j++)
        {
            arr[i][j] = rand() % 7;
            if (arr[i][j] == 0)
            {
                number_of_zero++;
            }
        }
    }

    for (int i = 0; i < lines; i++)
    {
       
        for (int j = 0; j < columns; j++)
        {
            cout << "[" << i << "]" << "[" << j << "] " << arr[i][j] << "  ";
            if (j == 3)
            {
                cout << endl;
            }
        }
        
    }
    cout << "Количество нулей: " << number_of_zero;
}

