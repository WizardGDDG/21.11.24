#include <iostream>

using namespace std;

int main() 
{
    const int ROWS = 3;
    const int COLS = 4;

    
    int matrix[ROWS][COLS] = 
    {
        {0, 1, 2, 0},
        {3, 0, 4, 5},
        {6, 7, 0, 8}
    };

    int zeroCount = 0; 

    
    for (int i = 0; i < ROWS; ++i) 
    {
        for (int j = 0; j < COLS; ++j) 
        {
            
            if (matrix[i][j] == 0) 
            {
                zeroCount++;
            }
        }
    }

    
    cout << "Количество нулевых элементов в массиве: " << zeroCount << endl;

    return 0;
}
